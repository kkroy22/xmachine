[bar/one]
inherit = bar/main
modules-center = time network tz0h0t1 tz1h1t1 tz2h2t1 tz3h2t2 tz4h2t3 tz5h2t4 tz6h3t1 tz6h3t2 tz6h3t3 tz7h4t1 cpu memory xwksp

[module/xwksp]
type = internal/xworkspaces
pin-workspaces = true
; $ xprop -root _NET_DESKTOP_NAMES
label-empty =
label-urgent = 
label-occupied =
label-monitor =
format = <label-state>
label-active = %icon%
