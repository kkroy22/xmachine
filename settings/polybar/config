[usr_var]
;(screen - ((screen * 0.75) + 2))
wifi_n = wlp5s0
bar_2_x_offset = 339
;wifi_n = wlp5s0
;bar_2_x_offset = 408

[colors]
background = #2E3440
foreground = #e6e6e6
accent     = #88C0D0
black       = ${xrdb:Polybar.color0}
red         = ${xrdb:Polybar.color1}
green       = ${xrdb:Polybar.color2}
yellow      = ${xrdb:Polybar.color3}
blue        = ${xrdb:Polybar.color4}
magenta     = ${xrdb:Polybar.color5}
cyan        = ${xrdb:Polybar.color6}
white       = ${xrdb:Polybar.color7}

[bar/main]
bottom = false
offset-y = 1
height = 25
radius = 5
wm-restack = bspwm
override-redirect = true
border = 0
background = ${colors.background}
foreground = ${colors.foreground}
font-0 = termsyn:size=8;3
font-1 = Roboto Mono NerdFont:size=11:antialias=true;3
module-margin-left = 2
module-margin-right = 2

[bar/one]
inherit = bar/main
width = 16%
offset-x = 2
modules-center = time

[bar/two]
inherit = bar/main
width = 75%
offset-x = ${usr_var.bar_2_x_offset} 
modules-center = network tz3h4t1 tz0h0t1 tz2h2t1 tz2h2t2 tz2h2t3 cpu memory battery

[module/temperature]
type = internal/temperature
interval = 0.5
;for i in /sys/class/thermal/thermal_zone*; do echo "$i: $(<$i/type)"; done
;for i in /sys/class/hwmon/hwmon*/temp*_input; do echo "$(<$(dirname $i)/name): $(cat ${i%_*}_label 2>/dev/null || echo $(basename ${i%_*})) $(readlink -f $i)"; done
base-temperature = 20
warn-temperature = 60
units = false
format = <label>
format-warn = <label-warn>
label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = #f00

[module/tz3h4t1]
inherit = module/temperature
thermal-zone = 3
hwmon-path = /sys/devices/virtual/thermal/thermal_zone3/hwmon4/temp1_input

[module/tz0h0t1]
inherit = module/temperature
thermal-zone = 0
hwmon-path = /sys/devices/virtual/thermal/thermal_zone0/hwmon0/temp1_input 

[module/tz2h2t1]
inherit = module/temperature
thermal-zone = 2
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input

[module/tz2h2t2]
inherit = module/temperature
thermal-zone = 2
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp2_input

[module/tz2h2t3]
inherit = module/temperature
thermal-zone = 2
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp3_input

[module/time]
type = internal/date
interval = 1
date = %a, %d %B
time = %I:%M %
format-prefix = ÔÄó
format-prefix-foreground = ${colors.accent}
format = <label>
label = "  %date% | %time% "
format-background = ${colors.background}
format-foreground = ${colors.foreground}
date-alt = %A, %d %B %Y
time-alt = %H:%M:%S

[module/battery]
type = internal/battery
;ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC
poll-interval = 5
format-charging = <label-charging>
format-discharging = <label-discharging>
label-charging = Charging %percentage%%
label-discharging = Discharging %percentage%%

[module/cpu]
type = internal/cpu
interval = 0.5
format = <label> <ramp-coreload>
label = %percentage%%
ramp-coreload-spacing = 1
ramp-coreload-0 = ‚ñÅ
ramp-coreload-1 = ‚ñÇ
ramp-coreload-2 = ‚ñÉ
ramp-coreload-3 = ‚ñÑ
ramp-coreload-4 = ‚ñÖ
ramp-coreload-5 = ‚ñÜ
ramp-coreload-6 = ‚ñá
ramp-coreload-7 = ‚ñà

[module/memory]
type = internal/memory
interval = 3
format = <label> <bar-used>
label = %gb_used%
bar-used-indicator =
bar-used-width = 50
bar-used-foreground-0 = #55aa55
bar-used-foreground-1 = #557755
