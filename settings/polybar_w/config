[usr_var]
;(screen - ((screen * 0.75) + 2))
wifi_n = enp2s0
bar_2_x_offset = 573

[colors]
background = #2E3440
foreground = #e6e6e6
accent     = #88C0D0
black       = ${xrdb:Polybar.color0}
red         = ${xrdb:Polybar.color1}
green       = ${xrdb:Polybar.color2}
yellow      = ${xrdb:Polybar.color3}
blue        = ${xrdb:Polybar.color4}
magenta     = ${xrdb:Polybar.color5}
cyan        = ${xrdb:Polybar.color6}
white       = ${xrdb:Polybar.color7}

[bar/main]
bottom = false
offset-y = 1
height = 25
radius = 5
wm-restack = bspwm
override-redirect = true
border = 0
background = ${colors.background}
foreground = ${colors.foreground}
font-0 = termsyn:size=8;3
font-1 = Roboto Mono NerdFont:size=11:antialias=true;3
module-margin-left = 2
module-margin-right = 2

[bar/one]
monitor = VGA-0
inherit = bar/main
width = 20%
offset-x = 2
modules-center = time

[bar/two]
monitor = VGA-0
inherit = bar/main
width = 70%
offset-x = ${usr_var.bar_2_x_offset} 
modules-center = xwksp xwindow network tz3h2t1 tz3h2t2 tz3h2t3 tz3h2t4 tz3h2t5 tz3h2t6 tz3h2t7

[bar/three]
monitor = HDMI-0
inherit = bar/main
width = 20%
offset-x = 2
modules-center = time

[bar/four]
monitor = HDMI-0
inherit = bar/main
width = 70%
offset-x = 322 
modules-center = xwksp cpu memory

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/bspwm]
type = internal/bspwm
pin-workspaces = true

[module/xwksp]
type = internal/xworkspaces
pin-workspaces = false
; $ xprop -root _NET_DESKTOP_NAMES
label-empty =
label-urgent = 
label-occupied =
label-monitor =
format = <label-state>
label-active = %icon%
icon-0 = 0;0 
icon-1 = I;[1 - controll]
icon-2 = II;[2 - internet]
icon-3 = III;[3 - editor]
icon-4 = IV;[4 - debug]
icon-5 = V;[5 - leakes]
icon-6 = VI;[6 - water]
icon-7 = VII;[7 - air]
icon-8 = VIII;[8 - break]
icon-9 = IX;[9 - end]

[module/temperature]
type = internal/temperature
interval = 0.5
;for i in /sys/class/thermal/thermal_zone*; do echo "$i: $(<$i/type)"; done
;for i in /sys/class/hwmon/hwmon*/temp*_input; do echo "$(<$(dirname $i)/name): $(cat ${i%_*}_label 2>/dev/null || echo $(basename ${i%_*})) $(readlink -f $i)"; done
base-temperature = 20
warn-temperature = 60
units = false
format = <label>
format-warn = <label-warn>
label-warn-foreground = #f00

